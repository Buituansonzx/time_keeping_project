# APP
APP_NAME=LaravelApp
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=8080

# PHP & NGINX
PHP_VERSION=8.2
NGINX_VERSION=alpine
COMPOSER_VERSION=2

# DATABASE (MySQL)
MYSQL_VERSION=8.0
MYSQL_PORT=3306
MYSQL_DATABASE=time_keeping_db
MYSQL_USER=app_user
MYSQL_PASSWORD=app_pass
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATA_PATH=../data/mysql

# REDIS
REDIS_VERSION=7.2
REDIS_PORT=6379
REDIS_DATA_PATH=../data/redis

# PHPMYADMIN (Optional - để quản lý database)
PMA_PORT=8081

# PATH MAPPING
APP_CODE_PATH_HOST=../src
APP_CODE_PATH_CONTAINER=/var/www/html

# NETWORK
NETWORK_NAME=laravel_network

# TIMEZONE
TIMEZONE=Asia/Ho_Chi_Minh

# PHP CONFIGURATION
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
PHP_MAX_EXECUTION_TIME=300

# XDEBUG (Optional - để debug code)
XDEBUG_MODE=off
XDEBUG_PORT=9003